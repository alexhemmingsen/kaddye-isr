{
  "name": "clara",
  "version": "0.1.0",
  "description": "Runtime ISR for static React apps",
  "type": "module",
  "bin": {
    "clara": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./next": {
      "types": "./dist/plugin/next.d.ts",
      "import": "./dist/plugin/next.js",
      "require": "./dist/plugin/next.cjs"
    },
    "./aws": {
      "types": "./dist/aws.d.ts",
      "import": "./dist/aws.js",
      "require": "./dist/aws.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.0.0",
    "@aws-sdk/client-cloudfront": "^3.0.0",
    "@aws-sdk/client-iam": "^3.988.0",
    "@aws-sdk/client-lambda": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "archiver": "^7.0.0",
    "esbuild": "^0.24.0"
  },
  "peerDependencies": {
    "next": ">=14"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@sparticuz/chromium": "^131.0.0",
    "puppeteer-core": "^22.0.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18",
    "webpack": "^5.0.0"
  }
}
